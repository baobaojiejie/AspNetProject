@{
    ViewBag.Title = "FRONT END";
}

<div class="row">
    <div class="col-md-4">
        <h2>Inputs</h2>
        <input class="form-control" type="text" name="id" id="id" placeholder="id" />
        <input class="form-control" type="text" name="firstname" id="firstname" placeholder="firstname" />
        <input class="form-control" type="text" name="lastname" id="lastname" placeholder="lastname" />
        <input class="form-control" type="text" name="numOfCourses" id="numOfCourses" placeholder="number of courses" />
        <input class="form-control" type="text" name="graduateDate" id="graduateDate" placeholder="graduate date" />
    </div>
    <div class="col-md-2">

    </div>
    <div class="col-md-3">
        <h2>Actions</h2>
        <button class="btn btn-primary" id="getAllStudents">Get all students</button><br /><br />
        <button class="btn btn-primary" id="getStudentById">Get student by id</button><br /><br />
        <button class="btn btn-primary" id="getStudentByLastname">Get student by lastname</button><br /><br />
        <button class="btn btn-primary" id="addNewStudent">Add new student</button><br /><br />
        <button class="btn btn-primary" id="updateStudentById">Update student by Id</button><br /><br />
        <button class="btn btn-primary" id="removeStudentById">Remove student by Id</button><br /><br />
        <button class="btn btn-primary" id="getStudentByFnAndNoc">Get student by Firstname And Number of courses</button><br /><br />

    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Results</h2>
        <p id="result"></p>
    </div>
</div>